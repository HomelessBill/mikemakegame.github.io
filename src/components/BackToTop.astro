---
// Back to top button that appears after scrolling down
---

<button
  id="back-to-top"
  aria-label="Back to top"
  class="fixed bottom-14 left-1/2 -translate-x-1/2 sm:bottom-14 sm:left-auto sm:right-20 sm:translate-x-0 z-40 w-12 h-12 rounded-full bg-accent/90 hover:bg-accent text-background shadow-lg transition-all duration-300 opacity-0 invisible hover:scale-110 active:scale-95"
>
  <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18" />
  </svg>
</button>

<script>
  const backToTopBtn = document.getElementById('back-to-top');

  // Show button when scrolled down
  function checkScroll() {
    if (window.scrollY > 300) {
      backToTopBtn?.classList.remove('opacity-0', 'invisible');
      backToTopBtn?.classList.add('opacity-100', 'visible');
    } else {
      backToTopBtn?.classList.remove('opacity-100', 'visible');
      backToTopBtn?.classList.add('opacity-0', 'invisible');
    }
  }

  // Scroll to top smoothly
  backToTopBtn?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });

  // Check on scroll with throttling
  let scrollTimeout: number;
  window.addEventListener('scroll', () => {
    if (scrollTimeout) {
      window.clearTimeout(scrollTimeout);
    }
    scrollTimeout = window.setTimeout(checkScroll, 100);
  }, { passive: true });

  // Check initial state
  checkScroll();
</script>
