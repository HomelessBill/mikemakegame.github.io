---
export interface Props {
  title: string;
  role: string;
  company: string;
  image?: string;
}

const { title, role, company, image } = Astro.props;
---

<article class="bg-[#222] rounded-lg p-4 hover:bg-[#2a2a2a] transition-all duration-200 transform hover:-translate-y-1 hover:shadow-xl">
  <div class="aspect-video bg-gradient-to-br from-[#1a1a1a] to-[#2a2a2a] rounded-md mb-4 overflow-hidden relative">
    {image ? (
      <img
        src={image}
        alt={`${title} game cover`}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <span class="text-accent/30 text-xs uppercase tracking-wider">Coming Soon</span>
      </div>
    )}
  </div>
  <h3 class="font-medium text-sm md:text-base">{title}</h3>
  <p class="text-xs opacity-70 mt-1">{role}, {company}</p>
</article>