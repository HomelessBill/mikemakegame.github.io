---
import LazyImage from './LazyImage.astro';

export interface Props {
  title: string;
  role: string;
  company: string;
  image?: string;
}

const { title, role, company, image } = Astro.props;
---

<article class="bg-background-alt border border-accent/10 rounded-lg p-4">
  <div class="aspect-video bg-background rounded-md mb-4 overflow-hidden relative border border-accent/5">
    {image ? (
      <LazyImage
        src={image}
        alt={`${title} game cover`}
        class="w-full h-full object-cover object-center"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <span class="text-accent/30 text-xs uppercase tracking-wider">Coming Soon</span>
      </div>
    )}
  </div>
  <h3 class="font-medium text-sm md:text-base">{title}</h3>
  <p class="text-xs opacity-70 mt-1">{role}, {company}</p>
</article>