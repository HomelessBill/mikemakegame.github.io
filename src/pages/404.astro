---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
---

<Layout title="404 - Page Not Found | Mike Make Game">
  <Header />

  <main id="content" class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="text-center max-w-2xl">
      <h1 class="text-6xl md:text-8xl font-display text-accent-bright mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-display mb-6">Page Not Found</h2>
      <p class="text-foreground-muted mb-8 font-light">
        Looks like this page doesn't exist. Maybe it got deleted, or maybe you mistyped the URL.
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-accent/90 hover:bg-accent text-background rounded-lg transition-colors duration-200 font-bold"
      >
        Go Home
      </a>
    </div>
  </main>

  <Footer />
  <ThemeSwitcher />
</Layout>
