---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Company website for Mike Make Game" } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-background text-foreground font-sans">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <style>
      html { scroll-padding-top: 3.5rem; } /* = header height */
    </style>

    <!-- Preconnects -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://api.fontshare.com" crossorigin />

    <!-- Preload critical assets -->
    <link rel="preload" href="/banners/hero-logo.jpg" as="image" fetchpriority="high" />
    <link rel="preload" href="/logo-text.png" as="image" />

    <!-- Preload fonts -->
    <link rel="preload" href="https://api.fontshare.com/v2/css?f[]=chillax@500&display=swap" as="style" />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500&display=swap" as="style" />

    <!-- Fonts -->
    <link href="https://api.fontshare.com/v2/css?f[]=chillax@500&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500&display=swap" rel="stylesheet" />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <!-- Open Graph / Twitter -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://mikemakegame.com/banners/midnight.jpg" />
    <meta property="og:url" content="https://mikemakegame.com" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://mikemakegame.com/banners/midnight.jpg" />

    <!-- Additional SEO -->
    <link rel="canonical" href="https://mikemakegame.com" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Mike Make Game",
        "url": "https://mikemakegame.com",
        "logo": "https://mikemakegame.com/logo-icon.png",
        "description": "Engineering-first game studio building innovative games. Consulting services for AAA and indie teams.",
        "founder": {
          "@type": "Person",
          "name": "Mike",
          "jobTitle": "Engineering Director"
        },
        "sameAs": [
          "https://store.steampowered.com/app/3767500"
        ]
      }
    </script>
  </head>

  <body>
    <slot />
  </body>
</html>
